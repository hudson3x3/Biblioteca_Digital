@using GrupoLTM.WebSmart.Infrastructure.Configuration
@model GrupoLTM.WebSmart.Admin.Models.LoginModel
@{
    ViewBag.Title = "Esqueci Senha";
    Layout = "~/Views/_Shared/Layout.cshtml";
}
<style type="text/css">
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }

        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }

        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }
</style>


<script>var BASE_URL = '@Url.Content("~/")';</script>

<!--formulário-->
<form class="form-signin">
    <div class="masthead">
        <ul class="nav nav-pills pull-left">
            <li><a href="@Url.Action("Index","Login")">Login</a></li>
            <li class="active"><a href="@Url.Action("Index", "EsqueciSenha")">Esqueci Senha</a></li>
        </ul>
    </div>


    <div style="text-align:center;">
        <img src="@Url.Content(Settings.Caminho.StoragePath + "logo/" + Model.Logo+Settings.Caminho.StorageToken)" />
        <br />
        <br />
    </div>

    <div class="form-inline">
        <p class="text-left">Por favor, Informe seu Login cadastrado.</p>
        <input type="text" class="input-block-level" placeholder="Login" id="login" name="login" validar validar-msg="Login" />
        <button class="btn btn-large btn-success" type="submit">Enviar</button>
        <button class="btnVoltar btn btn-large btn-primary" type="button">Voltar</button>

    </div>

</form>

<!-- Mensagem -->
<div class="alerta"></div>

<script src="@Url.Content(string.Format("{0}content/js/Pages/EsqueciSenha/Index.js?v=1.1", Settings.Caminho.ContentAdmin))" type="text/javascript"></script>